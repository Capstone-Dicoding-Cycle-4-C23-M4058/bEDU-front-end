{
    "env": {
        "commonjs": true,
        "es2021": true,
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "webpack.common.js",
        "webpack.dev.js",
        "webpack.prod.js",
        "specs/",
        "e2e/",
        "codecept.conf.js",
        "node_modules/",
        "karma.conf.js"
    ],
    "rules": {
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "no-param-reassign": "off",
        "import/no-extraneous-dependencies": "off",
        "no-restricted-globals": "off",
        "no-useless-constructor": "off",
        "no-plusplus": "off",
        "no-unused-vars": "off",
        "no-loop-func": "off",
        "no-use-before-define": "off",
        "function-paren-newline": "off",
        "no-console": "off",
        "linebreak-style": "off",
        "no-underscore-dangle": "off",
        "operator-linebreak": "off",
        "indent": "off"
    }
}